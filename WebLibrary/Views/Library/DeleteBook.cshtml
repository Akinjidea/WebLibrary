@model WebLibrary.ViewModels.Books.BookModel;
@{
    ViewBag.Title = "Удаление книги";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>Год</dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt>Автор</dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
    </dl>

    <div>
        <form asp-controller="library" asp-action="deleteBook" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default border-danger" value="Удалить" />
            </div>
        </form>
    </div>
</div>