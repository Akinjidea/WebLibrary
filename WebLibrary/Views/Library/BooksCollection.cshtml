@model WebLibrary.ViewModels.Books.BookPageViewModel
@{
    ViewBag.Title = "Библиотека";
}

<br />
<table class="table">
    <tr>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["IdSortParam"]" asp-route-search="@ViewData["SearchParam"]">Номер</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["NameSortParam"]" asp-route-search="@ViewData["SearchParam"]">Название</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["DescriptionSortParam"]" asp-route-search="@ViewData["SearchParam"]">Описание</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["YearSortParam"]" asp-route-search="@ViewData["SearchParam"]">Год</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["GenreSortParam"]" asp-route-search="@ViewData["SearchParam"]">Жанр</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["AddDateSortParam"]" asp-route-search="@ViewData["SearchParam"]">Дата добавления</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["AuthorSortParam"]" asp-route-search="@ViewData["SearchParam"]">Автор</a>
        </th>
        <th>Количество страниц</th><th>ISBN</th>
        <th colspan="2">Манипуляция</th>
    </tr>
    @foreach (var book in Model.Book)
    {
<tr>
    <td>@book.Id</td>
    <td><a asp-action="Book" asp-controller="Library" asp-route-id="@book.Id">@book.Name</a></td>
    <td>@book.Description</td>
    <td>@book.Year</td>
    <td>@book.Genre.Name</td>
    <td>@book.AdditionDate</td>
    <td>@book.Author.FullName</td>
    <td>@book.PageCount</td>
    <td>@book.ISBN</td>
<td><a asp-action="UpdateBook" asp-route-id="@book.Id">Изменить</a></td>
<td><a asp-action="DeleteBook" asp-route-id="@book.Id">Удалить</a></td>
</tr>
    }
</table>
<br/>

<div style="margin-left: 1vw; margin-right: 1vw;">
    <div class="float-right">
        <a asp-controller="Library" asp-action="AddBook">
            <input type="button" class="btn btn-default border-dark" value="Добавить книгу" />
        </a>
    </div>
    <div class="float-left">
        @if (Model.PageViewModel.HasPreviousPage)
        {
            <a asp-action="BooksCollection"
               asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
               class="btn btn-outline-dark">
                Назад
            </a>
        }
        @if (Model.PageViewModel.HasNextPage)
        {
            <a asp-action="BooksCollection"
               asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
               class="btn btn-outline-dark">
                Вперед
            </a>
        }
    </div>
</div>

