@model List<WebLibrary.Models.Books.Book>
@{
    ViewBag.Title = "Библиотека";
}

<br />
<table class="table">
    <tr>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["IdSortParam"]">Номер</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["NameSortParam"]">Название</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["DescriptionSortParam"]">Описание</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["YearSortParam"]">Год</a>
        </th>
        <th>
            <a asp-action="BooksCollection" asp-route-sortOrder="@ViewData["AuthorSortParam"]">Автор</a>
        </th>
        <th colspan="2">Манипуляция</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Id</td>
            <td>@book.Name</td>
            <td>@book.Description</td>
            <td>@book.Year</td>
            <td>@book.Author.FullName</td>
            <td><a asp-action="UpdateBook" asp-route-id="@book.Id">Изменить</a></td>
            <td><a asp-action="DeleteBook" asp-route-id="@book.Id">Удалить</a></td>
        </tr>
    }
</table>
<br/>
<div align="center">
    <a asp-controller="Library" asp-action="AddBook">
        <input type="button" class="btn btn-default border-dark" value="Добавить книгу" />
    </a>
</div>
