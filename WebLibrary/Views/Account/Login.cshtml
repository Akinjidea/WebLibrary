@model WebLibrary.ViewModels.Accounts.LoginModel;


<h2 align="center">Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@ViewBag.ReturnUrl" asp-anti-forgery="true">
    <div class="form-group">
        <label asp-for="Email" class="control-label">Введите Email</label>
        <input type="text" asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Введите пароль</label>
        <input type="password" asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" />
    </div>
    <div align="center" class="form-group">
        <input type="submit" value="Войти" class="btn btn-outline-dark" />
    </div>
</form>
<div align="center">
    <a asp-controller="Account" asp-action="Register">
        <input type="button" class="btn btn-default border-dark" value="Регистрация" />
    </a>
</div>
